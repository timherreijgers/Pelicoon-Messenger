<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.avans.pelicoonmessenger.client.controller.ClientLogin">

    <ImageView id="imageView" />
    <Label alignment="CENTER" text="Server ip:" textAlignment="CENTER" />
    <TextField fx:id="ipTextField" alignment="CENTER" maxWidth="200" onAction="#handleLoginAction" />
    <Label alignment="CENTER" text="Username:" textAlignment="CENTER" />
    <TextField fx:id="usernameTextField" alignment="CENTER" maxWidth="200" onAction="#handleLoginAction" />
    <Button alignment="CENTER" onAction="#handleLoginAction" text="Connect" />

</VBox>
